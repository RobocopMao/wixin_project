.cal-screen {
  display: flex;
  flex-direction: column;
  align-items: right;
  flex-grow: 99;
  background-color: #eee;
}
.cal-result-wrapper, .cal-formula-wrapper {
  padding-left: 20rpx;
  padding-right: 20rpx;
}
.cal-result-wrapper {
  /*height: 100rpx;*/
  text-align: right;
  line-height: 100rpx;
  font-size: 50rpx;
  font-weight: bold;
}
.cal-result {
  padding-top: 20rpx;
  width: 100%;
  color: #333;
  height: 140rpx;
}
.cal-formula-wrapper {
  display: flex;
  flex-direction: row;
  flex-grow: 99;
}
.cal-formula {
  width: 100%;
  height: auto;
  /*height: 200rpx;*/
  color: #999;
}
.cal-keyboard {
  display: flex;
  flex-direction: row;
  /*height: 400rpx;*/
}
.cal-number {
  display: flex;
  flex-direction: row;
  flex-basis: 80%;
  flex-wrap: wrap;
  /*justify-content: flex-start;*/
  /*align-content: stretch;*/
}
.cal-number-btn {
  /*display: block;*/
  flex-basis: 33%;
}
.cal-deal {
  display: flex;
  flex-basis: 20%;
  flex-direction: column;
}
